{% extends "../base/two_columns.jinja2" %}

{% block left_column_content %}
  <h2 class="title is-2">Information of John Smith</h2>
  <div class="columns is-mobile is-centered">
    <form class="column is-half" action="/d/someuser/edit" method="POST">
      <div class="box">
        <article class="media">
          <div class="media-left">
            <figure class="image is-128x128">
              <img src="https://bulma.io/images/placeholders/128x128.png" alt="Image">
            </figure>
          </div>
          <div class="media-content">
            <div class="content">
              <div class="file">
                <label class="file-label">
                  <input class="file-input" type="file" name="resume">
                  <span class="file-cta">
                    <span class="file-icon">
                      <i class="fa fa-upload"></i>
                    </span>
                    <span class="file-label">
                      Choose another avatar
                    </span>
                  </span>
                </label>
              </div>
            </div>
          </div>
        </article>
      </div>
      <div class="field">
        <label class="label">Username</label>
        <div class="control">
          <input class="input" type="text" placeholder="somename">
        </div>
      </div>
      <div class="field">
        <label class="label">Email</label>
        <div class="control">
          <input class="input" type="text" placeholder="someemail@example.com">
        </div>
      </div>
      <div class="field">
        <label class="label">Fullname</label>
        <div class="control">
          <input class="input" type="text" placeholder="Firstname Lasname">
        </div>
      </div>
      <div class="field">
        <label class="label">Description</label>
        <div class="control">
          <textarea id="" class="textarea" name="" rows="10" placeholder="Tell us about you..."></textarea>
        </div>
      </div>
      <div class="field">
        <div class="control">
          <button class="button is-success">Save</button>
        </div>
      </div>
    </form>
  </div>
{% endblock %}

{% block right_column_content %}
  {% include "../partials/advertising.jinja2" %}
  <hr>
  <h3 class="title is-3">Other actions</h3>
  <ul>
    <li>
      <a href="/d/someuser/changepassword">Change Password</a>
    </li>
    <li>
      <a href="/d/someuser/blocked">Blocked Users</a>
    </li>
  </ul>
{% endblock %}
